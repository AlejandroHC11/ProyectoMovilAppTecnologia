<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/main_gray"
        app:cardCornerRadius="15dp"
        android:layout_marginHorizontal="20dp"
>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
        android:background="@color/beige"
            android:padding="24dp"
    >

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
        >
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="VentaId:"
                    android:textSize="20dp"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/white"
                    android:layout_marginTop="16dp"
                    android:id="@+id/txtviewIdVenta"
                    android:layout_marginBottom="5dp"
            >
            </TextView>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CodProducto:"
                    android:textSize="20dp"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/white"
                    android:layout_marginTop="16dp"
                    android:id="@+id/txtviewCodProducto"
                    android:layout_marginBottom="5dp"
            >
            </TextView>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Producto:"
                    android:textSize="20dp"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/white"
                    android:layout_marginTop="16dp"
                    android:id="@+id/txtviewNomProducto"
                    android:layout_marginBottom="5dp"
            >
            </TextView>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Monto:"
                    android:textSize="20dp"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/white"
                    android:layout_marginTop="16dp"
                    android:id="@+id/txtviewMonto"
                    android:layout_marginBottom="5dp"
            >
            </TextView>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>